< script >
    function  CountDownTimer   ( date )  {
    left_days  =  document . getElementById ( "dias" ) ;
    left_hours  =  document . getElementById ( "horas" ) ;
    left_minutes  =  document . getElementById ( "minutos" ) ;

    fim  =  nova  data ( data ) ;
    _segundo  =  1000 ;
    _minuto  =  _segundo  *  60 ;
    _hora  =  _minuto  *  60 ;
    _dia  =  _horas  *  24 ;
    }
    function  showRemaining  ( ) {
    agora  =  nova  data ( ) ;
    distância  =  fim  -  agora ;
    distance2  =  new  Date ( "01/01/2021 00:00 AM" )  -  agora
    if  ( distância  <=  0  ) {
      clearInterval  ( temporizador )
      documento . getElementById ( "contador" ) . innerHTML  =  "<h2> Nada! Acabou <h2>" ;
      Retorna
    }
    else  if  ( distance2  >  0   ) {
      clearInterval  ( temporizador )
      documento . getElementById ( "contador" ) . innerHTML  =   "<h2> 2021 Não começou ainda! </h2>" ;
      Retorna
    } 
    dias  =  matemática . andar ( distância  /  _dia )
    horas  =  matemática . andar ( ( distância  %  _day )  /  _hour )
    minutos  =  matemática . andar ( ( distância  %  _hour )  /  _minuto )
    left_days . innerHTML  =  dias  +  "dias"
    left_hours . innerHTML  =  horas  +  "horas"
    left_minutes . innerHTML  =  minutos  +  "minutos"
    }
    

timer  =  setInterval  ( showRemaining ,  1 ) 
CountDownTimer (  "01/01/2022 00:00 AM" )
</ script >
